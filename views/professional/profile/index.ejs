<div class="container mx-auto py-5">
    <h1 class="text-5xl font-bold py-6">My Profile</h1>
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">User Details
                <a class="text-primary pr-5 sm:px-5" href="/pro/profile/edit"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg></a>
            </h2>
            <div class="form-control">
                <label for="firstName" class="label">
                    <span class="label-text">First Name</span>
                </label>
                <input type="text" name="firstName" id="firstName" class="input input-bordered" placeholder="First name" value="<%= typeof firstName != 'undefined' ? firstName : '' %>" disabled>
            </div>
            <div class="form-control">
                <label for="lastName" class="label">
                    <span class="label-text">Last Name</span>
                </label>
                <input type="text" name="lastName" id="lastName" class="input input-bordered" placeholder="Last name" value="<%= typeof lastName != 'undefined' ? lastName : '' %>" disabled>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text">Company Logo</span>
                </label>
                <div class="flex align-right items-center flex-1 font-bold leading-tight">
                    <div class="avatar placeholder">
                        <div class="bg-neutral-focus text-neutral-content rounded-full w-24">
                            <% if(companyLogo){ %>
                                <img src="<%= companyLogo %>" />
                            <% } else { %>
                                <span class="text-3xl"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-control">
                <label for="companyName" class="label">
                    <span class="label-text">Company Name</span>
                </label>
                <input type="text" name="companyName" id="companyName" class="input input-bordered" placeholder="Company name" value="<%= typeof companyName != 'undefined' ? companyName : '' %>" disabled>
            </div>
            <div class="form-control">
                <label for="companyPhone" class="label">
                    <span class="label-text">Company Phone</span>
                </label>
                <input type="text" name="companyPhone" id="companyPhone" class="input input-bordered" placeholder="Company phone" value="<%= typeof companyPhone != 'undefined' ? companyPhone : '' %>" disabled>
            </div>
            <div class="form-control">
                <label for="email" class="label">
                    <span class="label-text">Company Email</span>
                </label>
                <input type="text" name="email" class="input input-bordered" id="email" placeholder="Email Address" value="<%= typeof email != 'undefined' ? email : '' %>" disabled>
            </div>
            <div class="divider"></div> 
            <h2 class="card-title">Connections</h2>
            <p>You have no connections yet.</p>
            <div class="divider"></div>
            <div class="stats">                
                <div class="stat place-items-center">
                    <div class="stat-title">Total Connections</div>
                    <div class="stat-value"><%= connectionCount %></div>
                </div>
            </div>
        </div>
    </div>
</div>