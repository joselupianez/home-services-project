<div class="mx-auto max-w-7xl lg:px-8">
  <div class="overflow-hidden bg-white sm:rounded-lg sm:shadow">
    <div class="border-b border-gray-200 px-8 py-10 sm:px-6">
      <div class="px-4 sm:px-0">
        <div class="flex justify-between">
          <h3 class="text-base font-semibold leading-7 text-gray-900">User Information</h3>
          <a class="rounded-md px-3.5 py-2.5 bg-indigo-500 text-xs font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400" href="/profile/edit">Edit Profile</a>
        </div>
        <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Personal details</p>
      </div>
      <div class="mt-6 border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">First name</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= typeof firstName != 'undefined' ? firstName : '' %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Last name</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= typeof lastName != 'undefined' ? lastName : '' %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Email</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= typeof email != 'undefined' ? email : '' %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Connections</dt>
            <dd class="mt-2 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <ul role="list" class="divide-y divide-gray-100 rounded-md border border-gray-200">
                <% if(connections.length > 0){ %>
                <% connections.forEach(connection => { %>
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                      <% if(connection.company.logo){ %>
                        <img class="h-6 w-6 rounded-full bg-gray-100" src="<%= connection.company.logo %>" />
                      <% } else { %>
                        <span class="text-3xl"><svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></span>
                      <% } %>
                      <span class="truncate font-medium"><%= connection.company.companyName %></span>
                      <span class="flex-shrink-0 text-gray-400"><%= connection.company.phoneNumber %></span>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <form action="/connect/remove/<%= connection._id %>?_method=DELETE" method="POST">
                      <button class="font-medium text-red-600 hover:text-red-500">Remove Connection</button>
                    </form>
                  </div>
                </li>
                <% }) %>
                <% } else { %>
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                        <span class="truncate font-medium">No connections yet.</span>
                    </div>
                  </div>
                </li>
                <% } %>
              </ul>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>