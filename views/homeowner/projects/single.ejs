<div class="mx-auto max-w-7xl lg:px-8">
    <div class="overflow-hidden bg-white sm:rounded-lg sm:shadow">
        <div class="border-b border-gray-200 px-8 py-10 sm:px-6">
            <div class="flex justify-between pb-5">
                <h1 class="text-2xl font-bold tracking-tight sm:text-3xl text-gray-900"><%= project.title %></h1>
                <div class="flex gap-4">
                    <a class="rounded-md px-3.5 py-2.5 bg-indigo-500 text-xs font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400" href="/projects/edit/<%= project._id %>">Edit</a>
                    <form action="/projects/delete/<%= project._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="rounded-md bg-red-500 px-3.5 py-2.5 text-xs font-semibold text-white shadow-sm hover:bg-red-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-400">Delete</button>
                    </form>
                </div>
            </div>
            <h3 class="font-semibold text-gray-900 pb-5">Description</h3>
            <p class="text-base text-gray-900"><%= project.description %></p>
        </div>
        <% if(project.images.length > 0){ %>
        <div class="border-b border-gray-200 px-8 py-10 sm:px-6">
            <h3 class="font-semibold text-gray-900 pb-5">Photos</h3>
            <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 lg:gap-8">
                <% for(let i = 1; i <= project.images.length; i++){ %>
                    <img src="<%=project.images[i-1]%>" alt="Two each of gray, white, and black shirts laying flat." class="h-full w-full object-cover object-center rounded-lg">
                <% } %>
            </div>
        </div>
        <% } %>

        <div class="px-8 py-10 sm:px-6">
            <h3 class="font-semibold text-gray-900">Comments</h3>
            <% if(comments.length > 0){ %>
                <% comments.forEach((comment,i, arr) => { %>
                        <div class="flex space-x-4 text-sm">
                            <div class="flex-none py-10">
                                <%  if(comment.userId.company.logo){ %>
                                <img src="<%= comment.userId.company.logo %>" alt="" class="h-10 w-10 rounded-full bg-gray-100" />
                                <% } else { %>
                                <span class="text-3xl"><%= comment.userId.company.companyName.split(' ').map(w => w[0]).join('').toUpperCase() %></span>
                                <% } %>
                            </div>
                            <div class="<%= i === 0 ? '' : 'border-t border-gray-200' %> py-10">
                                <div class="flex flex-row justify-between">
                                    <div class="flex flex-col">
                                        <h3 class="font-semibold text-gray-900"><%= comment.userId.company.companyName %></h3>
                                        <p class="text-xs text-gray-600"><%= comment.createdAt.toLocaleString() %></p>
                                    </div>
                                    <% if(comment.userId.isProfessional && !connections.includes(comment.userId._id.toString())){ %>
                                    <form action="/connect/request/<%= comment.userId._id %>" method="POST">
                                        <button type="submit" class="rounded-md bg-indigo-500 px-3.5 py-2.5 text-xs font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400">Connect</button>
                                    </form>
                                    <% } %>
                                </div>
                                <p class="prose prose-sm mt-4 max-w-none text-gray-600"><%= comment.comment %></p>
                                <% if(comment.replies && comment.replies.length > 0){ %>
                                    <% comment.replies.forEach(arr => { %>
                                        <div class="flex space-x-4 text-sm pt-10">
                                            <div class="py-10">
                                                <% if(arr.userId.isProfessional && arr.userId.company.logo){ %>
                                                <img src="<%= arr.userId.company.logo %>" alt="" class="h-10 w-10 rounded-full bg-gray-100" />
                                                <% } else { %>
                                                <div class="h-10 w-10 rounded-full bg-gray-100 flex justify-center items-center"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></div>
                                                <% } %>
                                            </div>
                                            <div class="w-full border-t border-gray-200 pt-10">
                                                <div class="flex flex-row justify-between">
                                                    <div class="flex flex-col">
                                                        <% if(arr.userId._id.toString() == project.user._id.toString()){ %>
                                                            <h3 class="font-semibold text-gray-900">You (Name Hidden)</h3>
                                                            
                                                        <%} else if(arr.userId.isProfessional){ %>
                                                            <h3 class="font-semibold text-gray-900"><%= arr.userId.company.companyName %></h3>
                                                        <% } %>
                                                        <p class="text-xs text-gray-600"><%= arr.createdAt.toLocaleString() %></p>
                                                    </div>
                                                    <% if(arr.userId._id.toString() == project.user._id.toString()){ %>
                                                    <form action="/projects/<%= comment._id %>/removeReply/<%= arr._id %>?_method=DELETE" method="POST">
                                                        <button type="submit" class="rounded-md bg-red-500 px-3.5 py-2.5 text-xs font-semibold text-white shadow-sm hover:bg-red-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-400">Remove</button>
                                                    </form>
                                                    <% } %>
                                                    <% if(arr.userId.isProfessional && !connections.includes(arr.userId._id.toString())){ %>
                                                    <form action="/connect/request/<%= comment.userId._id %>" method="POST">
                                                        <button type="submit" class="rounded-md bg-indigo-500 px-3.5 py-2.5 text-xs font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400">Connect</button>
                                                    </form>
                                                    <% } %>
                                                </div>
                                                
                                                <p class="prose prose-sm mt-4 max-w-none text-gray-600"><%= arr.reply %></p>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } %>
                            </div>
                        </div> 
                <% }) %>
            <% } else { %>
                <p class="mt-4 text-md text-gray-600">No comments yet.</p>
            <% } %> 
        </div>
    </div>
</div>