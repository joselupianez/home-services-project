<div class="mx-auto max-w-7xl lg:px-8">
    <div class="overflow-hidden bg-white sm:rounded-lg sm:shadow">
        <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
            <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
                <div class="ml-4 mt-2">
                    <h3 class="text-base font-semibold leading-6 text-gray-900">My Projects</h3>
                </div>
                <div class="ml-4 mt-2 flex-shrink-0">
                    <a href="/projects/add" class="relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Create new project</a>
                </div>
            </div>
        </div>

        <% if(projects.length > 0){ %>
            <ul role="list" class="divide-y divide-gray-200">
                <% projects.forEach(project => { %>
                    <li>
                        <a href="/projects/<%= project._id %>" class="block hover:bg-gray-50">
                            <div class="px-4 py-4 sm:px-6">
                                <div class="flex items-center justify-between">
                                    <div class="truncate text-sm font-medium text-indigo-600"><%= project.title %></div>
                                    <div class="ml-2 flex flex-shrink-0">
                                        <span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-600 ring-1 ring-inset ring-green-600/20"><%= project.category.charAt(0).toUpperCase() + project.category.slice(1) %></span>
                                    </div>
                                </div>
                                <div class="mt-2 flex justify-between">
                                    <div class="sm:flex">
                                        <p class="text-xs text-gray-500"><%= project.createdAt.toLocaleString() %></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="py-10 text-center text-gray-400">You have no projects yet.</p>
        <% } %>
    </div>
</div>